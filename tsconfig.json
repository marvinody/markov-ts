{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    //"strict": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build/**/*"
  ]
}
